<!-- AMC Packages Section -->
<section id="amc-packages" class="section-padding bg-white">
  <div class="max-w-7xl mx-auto container-padding">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-4 py-2 bg-secondary-100 rounded-full text-secondary-700 font-medium mb-4">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Annual Maintenance Contracts
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Worry-Free
        <span class="gradient-text">Annual Protection</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Protect your investment with our comprehensive Annual Maintenance Contracts. 
        Regular checkups, priority support, and peace of mind for your Dubai apartment.
      </p>
    </div>

    <!-- AMC Package Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
      
      <!-- Basic AMC -->
      <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-3xl p-8 border border-gray-200 hover:border-gray-300 transition-all duration-300 transform hover:-translate-y-2">
        <div class="mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-gray-600 to-gray-700 rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">Basic AMC</h3>
          <div class="flex items-baseline mb-4">
            <span class="text-4xl font-bold text-gray-700">AED 1,200</span>
            <span class="text-gray-500 ml-2">/year</span>
          </div>
          <p class="text-gray-600 text-sm">Perfect for small apartments</p>
        </div>

        <div class="space-y-4 mb-8">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">4 AC checkups & filter changes annually</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Emergency plumbing repairs (up to AED 500)</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">General repairs (up to AED 300)</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Business hours support (8 AM - 6 PM)</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Quarterly apartment inspection</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">20% discount on additional services</span>
          </div>
        </div>

        <a href="/book?package=basic-amc" class="block w-full bg-gray-700 text-white font-bold py-4 px-6 rounded-xl text-center hover:bg-gray-800 transition-all duration-300 transform hover:scale-105">
          Choose Basic AMC
        </a>
      </div>

      <!-- Premium AMC -->
      <div class="bg-white rounded-3xl p-8 card-shadow border-2 border-primary-200 hover:border-primary-400 transition-all duration-300 transform hover:-translate-y-2 relative overflow-hidden">
        <!-- Recommended Badge -->
        <div class="absolute top-0 right-0 bg-gradient-to-r from-primary-500 to-secondary-500 text-white px-6 py-2 rounded-bl-2xl font-bold text-sm">
          RECOMMENDED
        </div>
        
        <div class="mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">Premium AMC</h3>
          <div class="flex items-baseline mb-4">
            <span class="text-4xl font-bold text-primary-600">AED 2,500</span>
            <span class="text-gray-500 ml-2">/year</span>
          </div>
          <p class="text-primary-600 text-sm font-medium">Most comprehensive coverage</p>
        </div>

        <div class="space-y-4 mb-8">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700"><strong>24/7 support</strong> & emergency response</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700"><strong>Unlimited visits</strong> for covered services</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Monthly AC maintenance & deep cleaning</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Emergency repairs (up to AED 1,500)</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700"><strong>Priority scheduling</strong> within 2 hours</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">30% discount on major renovations</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Dedicated account manager</span>
          </div>
        </div>

        <a href="/book?package=premium-amc" class="block w-full bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-bold py-4 px-6 rounded-xl text-center hover:from-primary-600 hover:to-secondary-600 transition-all duration-300 transform hover:scale-105">
          Choose Premium AMC
        </a>
      </div>

      <!-- Family AMC -->
      <div class="bg-gradient-to-br from-secondary-50 to-accent-50 rounded-3xl p-8 border border-secondary-200 hover:border-secondary-400 transition-all duration-300 transform hover:-translate-y-2">
        <div class="mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-secondary-500 to-accent-500 rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zM4 18v-4h3v7H5v-3H4zm3-7.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM16.5 17c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5-1.5-.67-1.5-1.5.67-1.5 1.5-1.5zM12.5 11.5c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5-1.5-.67-1.5-1.5.67-1.5 1.5-1.5z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">Family AMC</h3>
          <div class="flex items-baseline mb-4">
            <span class="text-4xl font-bold text-secondary-600">AED 1,800</span>
            <span class="text-gray-500 ml-2">/year</span>
          </div>
          <p class="text-secondary-600 text-sm font-medium">Perfect for families with children</p>
        </div>

        <div class="space-y-4 mb-8">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-secondary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">6 AC checkups per year (deep clean)</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-secondary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Child-safe repairs & maintenance</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-secondary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Emergency repairs (up to AED 800)</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-secondary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Extended hours support (7 AM - 9 PM)</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-secondary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Bi-monthly safety inspections</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-secondary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">Family emergency contacts</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-secondary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700">25% discount on additional services</span>
          </div>
        </div>

        <a href="/book?package=family-amc" class="block w-full bg-secondary-600 text-white font-bold py-4 px-6 rounded-xl text-center hover:bg-secondary-700 transition-all duration-300 transform hover:scale-105">
          Choose Family AMC
        </a>
      </div>
    </div>

    <!-- AMC Benefits -->
    <div class="bg-gradient-to-r from-primary-600 to-secondary-600 rounded-3xl p-8 text-white mb-16">
      <div class="text-center mb-8">
        <h3 class="text-3xl font-bold mb-4">Why Choose Our AMC Plans?</h3>
        <p class="text-primary-100 text-lg max-w-2xl mx-auto">
          Annual Maintenance Contracts provide consistent care for your apartment, 
          ensuring optimal performance and preventing costly emergency repairs.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h4 class="font-bold mb-2">Cost Savings</h4>
          <p class="text-primary-100 text-sm">Save up to 40% compared to individual service calls</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h4 class="font-bold mb-2">Priority Service</h4>
          <p class="text-primary-100 text-sm">AMC customers get first priority for all bookings</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h4 class="font-bold mb-2">Preventive Care</h4>
          <p class="text-primary-100 text-sm">Regular maintenance prevents major breakdowns</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="font-bold mb-2">Peace of Mind</h4>
          <p class="text-primary-100 text-sm">Know your apartment is always in expert hands</p>
        </div>
      </div>
    </div>

    <!-- Payment Options -->
    <div class="bg-gray-50 rounded-3xl p-8 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">
        Flexible Payment Options Available
      </h3>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
        We understand that moving to Dubai involves many expenses. That's why we offer flexible payment plans 
        to make our AMC packages accessible to all new residents.
      </p>
      <div class="flex flex-wrap justify-center gap-6 text-sm">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>30% advance payment</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>Balance in 3 installments</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>No interest charges</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>All major cards accepted</span>
        </div>
      </div>
    </div>
  </div>
</section>
