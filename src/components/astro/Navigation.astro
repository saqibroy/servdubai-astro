---
// Navigation component for ServDubai
---

<nav class="bg-white shadow-lg border-b border-primary-100 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto container-padding">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3 group">
          <!-- Your Logo Image - Main prominent element -->
          <div class="w-16 h-16 flex items-center justify-center group-hover:scale-105 transition-transform">
            <img src="/logo.png" alt="ServDubai Logo" class="w-full h-full object-contain" />
          </div>
          <!-- Text - Same size and style as Contact page -->
          <div>
            <div class="text-2xl md:text-3xl font-bold">
              <span class="text-accent-600 font-extrabold">Serv</span><span class="text-secondary-600 font-extrabold">Dubai</span>
            </div>
            <p class="text-xs text-gray-600 hidden sm:block font-medium">Expert hands, Professional Results</p>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-text-600 hover:text-primary-600 font-medium transition-colors">Home</a>
        <a href="/services" class="text-text-600 hover:text-primary-600 font-medium transition-colors">Services</a>
        <a href="/packages" class="text-text-600 hover:text-primary-600 font-medium transition-colors">AMC Packages</a>
        <a href="/about" class="text-text-600 hover:text-primary-600 font-medium transition-colors">About</a>
        <a href="/contact" class="text-text-600 hover:text-primary-600 font-medium transition-colors">Contact</a>
        <a href="/book" class="btn-primary">Book Now</a>
        <a href="https://wa.me/971501234567" target="_blank" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors flex items-center space-x-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
          </svg>
          <span class="hidden lg:block">WhatsApp</span>
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          id="mobile-menu-button"
          class="text-text-600 hover:text-primary-600 focus:outline-none focus:text-primary-600"
          aria-label="Toggle mobile menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-primary-100">
        <a href="/" class="block px-3 py-2 text-text-600 hover:text-primary-600 font-medium">Home</a>
        <a href="/services" class="block px-3 py-2 text-text-600 hover:text-primary-600 font-medium">Services</a>
        <a href="/packages" class="block px-3 py-2 text-text-600 hover:text-primary-600 font-medium">AMC Packages</a>
        <a href="/about" class="block px-3 py-2 text-text-600 hover:text-primary-600 font-medium">About</a>
        <a href="/contact" class="block px-3 py-2 text-text-600 hover:text-primary-600 font-medium">Contact</a>
        <a href="/book" class="block mx-3 my-2 btn-primary text-center">Book Now</a>
        <a href="https://wa.me/971501234567" target="_blank" class="block mx-3 my-2 bg-green-500 text-white py-2 px-4 rounded-lg text-center">
          WhatsApp Chat
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    if (button && menu) {
      button.addEventListener('click', function() {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>
