---
---

<!-- Hero Section with Dubai Skyline Background -->
<section class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <!-- Dubai skyline background image placeholder - 1920x1080 -->
    <div class="w-full h-full bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
      <!-- Dubai skyline silhouette -->
      <svg class="absolute bottom-0 w-full h-1/3 opacity-20" viewBox="0 0 1920 400" fill="none">
        <!-- Skyline buildings -->
        <rect x="100" y="200" width="60" height="200" fill="currentColor"/>
        <rect x="180" y="150" width="50" height="250" fill="currentColor"/>
        <rect x="250" y="100" width="70" height="300" fill="currentColor"/>
        <rect x="340" y="80" width="80" height="320" fill="currentColor"/>
        <rect x="440" y="50" width="90" height="350" fill="currentColor"/>
        <!-- Burj Khalifa -->
        <rect x="480" y="20" width="16" height="380" fill="currentColor"/>
        <polygon points="488,20 496,30 480,30" fill="currentColor"/>
        <rect x="550" y="120" width="60" height="280" fill="currentColor"/>
        <rect x="630" y="140" width="70" height="260" fill="currentColor"/>
        <rect x="720" y="90" width="80" height="310" fill="currentColor"/>
        <rect x="820" y="110" width="60" height="290" fill="currentColor"/>
        <rect x="900" y="160" width="50" height="240" fill="currentColor"/>
        <rect x="970" y="180" width="60" height="220" fill="currentColor"/>
        <rect x="1050" y="140" width="70" height="260" fill="currentColor"/>
        <rect x="1140" y="120" width="80" height="280" fill="currentColor"/>
        <rect x="1240" y="90" width="60" height="310" fill="currentColor"/>
        <rect x="1320" y="170" width="50" height="230" fill="currentColor"/>
        <rect x="1390" y="200" width="60" height="200" fill="currentColor"/>
        <rect x="1470" y="180" width="70" height="220" fill="currentColor"/>
        <rect x="1560" y="150" width="80" height="250" fill="currentColor"/>
        <rect x="1660" y="190" width="60" height="210" fill="currentColor"/>
        <rect x="1740" y="210" width="50" height="190" fill="currentColor"/>
        <rect x="1810" y="180" width="60" height="220" fill="currentColor"/>
      </svg>
    </div>
    <!-- Emerald gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-600/90 via-secondary-600/85 to-primary-800/90"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full section-padding">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-white">
          <!-- Badge -->
          <div class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            New Apartment Specialists
          </div>

          <!-- Main Headline -->
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
            New to Dubai?
            <span class="block text-3xl md:text-5xl lg:text-6xl text-primary-200">
              We'll make your apartment
            </span>
            <span class="block text-accent-300">move-in ready</span>
          </h1>

          <!-- Subheadline -->
          <p class="text-xl md:text-2xl text-primary-100 mb-8 leading-relaxed max-w-2xl">
            20-person maintenance team ready to prepare your new Dubai apartment. 
            From deep cleaning to AC servicing, we handle everything so you can settle in worry-free.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 mb-12">
            <a href="/book" class="bg-white text-primary-600 font-bold py-4 px-8 rounded-xl text-lg hover:bg-primary-50 transition-all duration-300 transform hover:scale-105 shadow-lg text-center">
              Book New Resident Package
            </a>
            <a href="https://wa.me/971XXXXXXXXX" target="_blank" class="bg-green-500 text-white font-bold py-4 px-8 rounded-xl text-lg hover:bg-green-600 transition-all duration-300 transform hover:scale-105 shadow-lg text-center flex items-center justify-center gap-2">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              WhatsApp Consultation
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="flex flex-wrap items-center gap-6 text-sm text-primary-100">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-accent-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>20 Professional Specialists</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-accent-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span>New Apartment Experts</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-accent-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              <span>30-Day Warranty</span>
            </div>
          </div>
        </div>

        <!-- Right Content - Service Highlights -->
        <div class="lg:pl-8">
          <div class="bg-white/10 backdrop-blur-lg rounded-3xl p-8 border border-white/20">
            <h3 class="text-2xl font-bold text-white mb-6">Move-in Ready Services</h3>
            
            <div class="space-y-4">
              <div class="flex items-center space-x-4 text-white">
                <div class="w-12 h-12 bg-accent-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L4.5 20.29l.71.71L12 18l6.79 3 .71-.71L12 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold">Deep Cleaning Service</p>
                  <p class="text-primary-200 text-sm">Professional sanitization & detailing</p>
                </div>
              </div>

              <div class="flex items-center space-x-4 text-white">
                <div class="w-12 h-12 bg-secondary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold">AC System Checkup</p>
                  <p class="text-primary-200 text-sm">Full inspection & optimization</p>
                </div>
              </div>

              <div class="flex items-center space-x-4 text-white">
                <div class="w-12 h-12 bg-primary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold">Plumbing Check</p>
                  <p class="text-primary-200 text-sm">Comprehensive water system review</p>
                </div>
              </div>

              <div class="flex items-center space-x-4 text-white">
                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold">Minor Repairs</p>
                  <p class="text-primary-200 text-sm">Fix any move-in issues immediately</p>
                </div>
              </div>
            </div>

            <!-- Quick Stats -->
            <div class="mt-8 pt-6 border-t border-white/20">
              <div class="grid grid-cols-3 gap-4 text-center text-white">
                <div>
                  <div class="text-2xl font-bold text-accent-300">AED 800</div>
                  <div class="text-xs text-primary-200">Complete Package</div>
                </div>
                <div>
                  <div class="text-2xl font-bold text-accent-300">24h</div>
                  <div class="text-xs text-primary-200">Service Time</div>
                </div>
                <div>
                  <div class="text-2xl font-bold text-accent-300">30%</div>
                  <div class="text-xs text-primary-200">First 50 Residents</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Elements -->
  <div class="absolute top-20 left-10 w-20 h-20 bg-accent-400/20 rounded-full blur-xl animate-pulse"></div>
  <div class="absolute bottom-32 right-16 w-32 h-32 bg-primary-400/20 rounded-full blur-xl animate-pulse" style="animation-delay: 1s;"></div>
  <div class="absolute top-1/3 right-1/4 w-16 h-16 bg-secondary-400/20 rounded-full blur-xl animate-pulse" style="animation-delay: 2s;"></div>
</section>
