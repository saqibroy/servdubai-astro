---
import { siteConfig } from '../../config/site';
import { companyConfig } from '../../config/company';
---

<!-- Hero Section with Construction Theme Background -->
<section class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <!-- Construction site background image - 1920x1080px -->
    <div class="relative w-full h-full">
      <img 
        src="/hero/construction-site-dubai-background.jpg" 
        alt="Dubai construction site background showing modern buildings under construction with cranes and construction equipment, representing ServDubai's construction finishing expertise"
        class="w-full h-full object-cover"
        loading="eager"
        onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
      />
      <!-- Fallback gradient background if image fails to load -->
      <div class="absolute inset-0 w-full h-full bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 hidden">
        <!-- Construction buildings silhouette -->
      <svg class="absolute bottom-0 w-full h-1/3 opacity-20" viewBox="0 0 1920 400" fill="none" aria-hidden="true">
        <!-- Construction site buildings -->
        <rect x="100" y="200" width="60" height="200" fill="currentColor"/>
        <rect x="180" y="150" width="50" height="250" fill="currentColor"/>
        <rect x="250" y="100" width="70" height="300" fill="currentColor"/>
        <rect x="340" y="80" width="80" height="320" fill="currentColor"/>
        <rect x="440" y="50" width="90" height="350" fill="currentColor"/>
        <!-- Construction crane -->
        <rect x="480" y="20" width="16" height="380" fill="currentColor"/>
        <polygon points="488,20 496,30 480,30" fill="currentColor"/>
        <rect x="550" y="120" width="60" height="280" fill="currentColor"/>
        <rect x="630" y="140" width="70" height="260" fill="currentColor"/>
        <rect x="720" y="90" width="80" height="310" fill="currentColor"/>
        <rect x="820" y="110" width="60" height="290" fill="currentColor"/>
        <rect x="900" y="160" width="50" height="240" fill="currentColor"/>
        <rect x="970" y="180" width="60" height="220" fill="currentColor"/>
        <rect x="1050" y="140" width="70" height="260" fill="currentColor"/>
        <rect x="1140" y="120" width="80" height="280" fill="currentColor"/>
        <rect x="1240" y="90" width="60" height="310" fill="currentColor"/>
        <rect x="1320" y="170" width="50" height="230" fill="currentColor"/>
        <rect x="1390" y="200" width="60" height="200" fill="currentColor"/>
        <rect x="1470" y="180" width="70" height="220" fill="currentColor"/>
        <rect x="1560" y="150" width="80" height="250" fill="currentColor"/>
        <rect x="1660" y="190" width="60" height="210" fill="currentColor"/>
        <rect x="1740" y="210" width="50" height="190" fill="currentColor"/>
        <rect x="1810" y="180" width="60" height="220" fill="currentColor"/>
      </svg>
      
      <!-- Construction equipment silhouettes -->
      <svg class="absolute top-1/4 right-1/4 w-32 h-32 opacity-10" viewBox="0 0 100 100" fill="none" aria-hidden="true">
        <!-- Construction crane arm -->
        <rect x="45" y="10" width="4" height="80" fill="currentColor"/>
        <rect x="20" y="12" width="60" height="3" fill="currentColor"/>
        <rect x="75" y="15" width="3" height="20" fill="currentColor"/>
      </svg>
      
        <!-- Alt text for screen readers -->
        <span class="sr-only">Dubai construction site background showing modern buildings under construction with cranes and construction equipment, representing ServDubai's construction finishing expertise</span>
      </div>
    </div>
    <!-- Emerald gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-600/90 via-secondary-600/85 to-primary-800/90"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full section-padding">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-white">
          <!-- Badge -->
          <div class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            Construction Finishing Specialists
          </div>

          <!-- Main Headline -->
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
            {companyConfig.name}
            <span class="block text-3xl md:text-5xl lg:text-6xl text-primary-200">
              Construction Finishing
            </span>
            <span class="block text-accent-300">Specialists</span>
          </h1>

          <!-- Subheadline -->
          <p class="text-xl md:text-2xl text-primary-100 mb-8 leading-relaxed max-w-2xl">
            We complete what builders start - Professional kitchen, bathroom, and interior finishing for Dubai's newest buildings. 
            From construction sites to move-in ready spaces.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 mb-12">
            <a href="/book" class="bg-white text-primary-600 font-bold py-4 px-8 rounded-xl text-lg hover:bg-primary-50 transition-all duration-300 transform hover:scale-105 shadow-lg text-center">
              Get Project Quote
            </a>
            <a href={`https://wa.me/${companyConfig.whatsapp}?text=${encodeURIComponent("Hi ServDubai! I need construction finishing services for my project. Can we schedule a site visit?")}`} target="_blank" class="bg-green-500 text-white font-bold py-4 px-8 rounded-xl text-lg hover:bg-green-600 transition-all duration-300 transform hover:scale-105 shadow-lg text-center flex items-center justify-center gap-2">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              Schedule Site Visit
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="flex flex-wrap items-center gap-6 text-sm text-primary-100">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-accent-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Founded in {companyConfig.registration.establishment}</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-accent-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span>{companyConfig.certifications[4]}</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-accent-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              <span>{companyConfig.certifications[0]}</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-accent-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"/>
              </svg>
              <span>{companyConfig.workingHours.emergency} Response</span>
            </div>
          </div>
        </div>

        <!-- Right Content - Construction Services Highlights -->
        <div class="lg:pl-8">
          <div class="bg-white/10 backdrop-blur-lg rounded-3xl p-8 border border-white/20">
            <h3 class="text-2xl font-bold text-white mb-6">Construction Finishing Services</h3>
            
            <div class="space-y-4">
              <div class="flex items-center space-x-4 text-white">
                <div class="w-12 h-12 bg-accent-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold">Kitchen Installation</p>
                  <p class="text-primary-200 text-sm">Complete cabinet & appliance setup</p>
                </div>
              </div>

              <div class="flex items-center space-x-4 text-white">
                <div class="w-12 h-12 bg-secondary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 11H7v6h2v-6zm4 0h-2v6h2v-6zm4 0h-2v6h2v-6zM4 19h16v2H4v-2zM20 5H4v2h16V5zm-8 7c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold">Bathroom Finishing</p>
                  <p class="text-primary-200 text-sm">Fixtures, tiling & plumbing work</p>
                </div>
              </div>

              <div class="flex items-center space-x-4 text-white">
                <div class="w-12 h-12 bg-primary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold">Marble & Flooring</p>
                  <p class="text-primary-200 text-sm">Premium stone & tile installation</p>
                </div>
              </div>

              <div class="flex items-center space-x-4 text-white">
                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold">Custom Woodwork</p>
                  <p class="text-primary-200 text-sm">Built-in wardrobes & carpentry</p>
                </div>
              </div>
            </div>

            <!-- Quick Stats -->
            <div class="mt-8 pt-6 border-t border-white/20">
              <div class="grid grid-cols-3 gap-4 text-center text-white">
                <div>
                  <div class="text-2xl font-bold text-accent-300">AED 8K+</div>
                  <div class="text-xs text-primary-200">Project Packages</div>
                </div>
                <div>
                  <div class="text-2xl font-bold text-accent-300">2-4wk</div>
                  <div class="text-xs text-primary-200">Project Timeline</div>
                </div>
                <div>
                  <div class="text-2xl font-bold text-accent-300">15%</div>
                  <div class="text-xs text-primary-200">Bulk Discounts</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Elements -->
  <div class="absolute top-20 left-10 w-20 h-20 bg-accent-400/20 rounded-full blur-xl animate-pulse"></div>
  <div class="absolute bottom-32 right-16 w-32 h-32 bg-primary-400/20 rounded-full blur-xl animate-pulse" style="animation-delay: 1s;"></div>
  <div class="absolute top-1/3 right-1/4 w-16 h-16 bg-secondary-400/20 rounded-full blur-xl animate-pulse" style="animation-delay: 2s;"></div>
</section>
