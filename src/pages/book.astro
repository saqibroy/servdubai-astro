---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/astro/Navigation.astro';
import Footer from '../components/astro/Footer.astro';
import ProjectAssessmentForm from '../components/react/ProjectAssessmentForm.tsx';

const url = new URL(Astro.request.url);
const initialProjectType = url.searchParams.get('project') || '';
---

<Layout 
  title="Get Construction Project Quote Dubai | Free Site Visits & Assessment - ServDubai" 
  description="Get professional quotes for construction finishing projects in Dubai. Kitchen installation, bathroom finishing, flooring, woodwork, painting & AC setup. Free site visits, same-day assessments, bulk pricing for developers and contractors."
>
  <Navigation />
  
  <!-- Project Assessment Page Header -->
  <section class="bg-gradient-to-br from-primary-600 to-secondary-600 section-padding text-white">
    <div class="max-w-7xl mx-auto container-padding text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Get Your Project Quote
      </h1>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Professional construction finishing assessment for Dubai's newest buildings. 
        Get a detailed quote and schedule your site visit.
      </p>
      
      <!-- Quick Service Buttons -->
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 max-w-4xl mx-auto">
        <button class="service-quick-btn bg-white/20 backdrop-blur-sm text-white font-bold py-3 px-4 rounded-xl hover:bg-white/30 transition-all duration-300 text-sm border border-white/30" data-service="kitchen">
          Kitchen Finishing
          <div class="text-primary-200 text-xs mt-1">From AED 2,500</div>
        </button>
        <button class="service-quick-btn bg-white/20 backdrop-blur-sm text-white font-bold py-3 px-4 rounded-xl hover:bg-white/30 transition-all duration-300 text-sm border border-white/30" data-service="bathroom">
          Bathroom Finishing
          <div class="text-primary-200 text-xs mt-1">From AED 1,800</div>
        </button>
        <button class="service-quick-btn bg-white/20 backdrop-blur-sm text-white font-bold py-3 px-4 rounded-xl hover:bg-white/30 transition-all duration-300 text-sm border border-white/30" data-service="flooring">
          Flooring & Tiling
          <div class="text-primary-200 text-xs mt-1">From AED 80/sqm</div>
        </button>
        <button class="service-quick-btn bg-white/20 backdrop-blur-sm text-white font-bold py-3 px-4 rounded-xl hover:bg-white/30 transition-all duration-300 text-sm border border-white/30" data-service="woodwork">
          Custom Woodwork
          <div class="text-primary-200 text-xs mt-1">From AED 1,200</div>
        </button>
        <button class="service-quick-btn bg-white/20 backdrop-blur-sm text-white font-bold py-3 px-4 rounded-xl hover:bg-white/30 transition-all duration-300 text-sm border border-white/30" data-service="painting">
          Painting & Finishing
          <div class="text-primary-200 text-xs mt-1">From AED 25/sqm</div>
        </button>
        <button class="service-quick-btn bg-white/20 backdrop-blur-sm text-white font-bold py-3 px-4 rounded-xl hover:bg-white/30 transition-all duration-300 text-sm border border-white/30" data-service="complete">
          Complete Building
          <div class="text-primary-200 text-xs mt-1">Custom Quote</div>
        </button>
      </div>
    </div>
  </section>

  <!-- Project Assessment Form Section -->
  <section class="section-padding bg-gray-50">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        
        <!-- Project Assessment Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-3xl p-8 md:p-12 card-shadow">
            <div class="text-center mb-8">
              <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Project Assessment
              </h2>
              <p class="text-gray-600 text-lg">
                Tell us about your construction finishing project and we'll provide a detailed quote with site visit
              </p>
            </div>
            <ProjectAssessmentForm initialProjectType={initialProjectType} client:idle />
          </div>
        </div>

        <!-- Construction Industry Information Sidebar -->
        <div class="lg:col-span-1">
          <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-3xl p-8 border border-primary-100">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Construction Finishing Experts</h3>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 mb-1">Construction Specialists</h4>
                  <p class="text-gray-600 text-sm">20+ skilled specialists completing finishing work for Dubai's newest buildings and developments.</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-secondary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 mb-1">Bulk Project Pricing</h4>
                  <p class="text-gray-600 text-sm">Special rates for developers and contractors with multiple units. Flexible payment terms available.</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-accent-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 mb-1">Quality Guarantee</h4>
                  <p class="text-gray-600 text-sm">Licensed and insured with comprehensive warranty on all construction finishing work.</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 mb-1">Same-Day Site Visits</h4>
                  <p class="text-gray-600 text-sm">Quick response for project assessments and urgent construction finishing needs across Dubai.</p>
                </div>
              </div>
            </div>

            <!-- Popular Packages -->
            <div class="mt-8 pt-8 border-t border-primary-200">
              <h4 class="font-bold text-gray-900 mb-4">Popular for Developers</h4>
              <div class="space-y-3">
                <div class="bg-white rounded-xl p-4 border border-primary-200">
                  <div class="flex justify-between items-center">
                    <div>
                      <h5 class="font-semibold text-gray-900">New Building Package</h5>
                      <p class="text-gray-600 text-sm">Complete apartment finishing</p>
                    </div>
                    <div class="text-primary-600 font-bold">AED 8K-15K</div>
                  </div>
                </div>
                <div class="bg-white rounded-xl p-4 border border-secondary-200">
                  <div class="flex justify-between items-center">
                    <div>
                      <h5 class="font-semibold text-gray-900">Kitchen & Bathroom Combo</h5>
                      <p class="text-gray-600 text-sm">Perfect for handover preparation</p>
                    </div>
                    <div class="text-secondary-600 font-bold">AED 4.5K-8K</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Contact Info -->
            <div class="mt-8 pt-8 border-t border-primary-200">
              <h4 class="font-bold text-gray-900 mb-4">Need Project Consultation?</h4>
              <div class="space-y-3">
                <a href="https://wa.me/971552418446" target="_blank" class="flex items-center space-x-3 bg-green-500 text-white p-3 rounded-xl hover:bg-green-600 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                  </svg>
                  <span class="font-medium">WhatsApp Project Details</span>
                </a>
                <a href="tel:+971552418446" class="flex items-center space-x-3 bg-primary-500 text-white p-3 rounded-xl hover:bg-primary-600 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                  </svg>
                  <span class="font-medium">Call Construction Team</span>
                </a>
              </div>
              <p class="text-gray-600 text-sm mt-3">Construction specialists available in English, Arabic, Hindi & Urdu</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Urgent Project Contact -->
  <section class="bg-orange-50 py-12">
    <div class="max-w-4xl mx-auto container-padding text-center">
      <div class="bg-orange-500 text-white rounded-3xl p-8">
        <h3 class="text-2xl font-bold mb-4">Urgent Construction Project?</h3>
        <p class="text-orange-100 mb-6">
          Need finishing work completed quickly? Our team can handle urgent construction projects with same-day site visits
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+971552418446" class="bg-white text-orange-500 font-bold py-3 px-8 rounded-xl hover:bg-orange-50 transition-colors">
            Urgent Project Hotline
          </a>
          <a href="https://wa.me/971552418446?text=URGENT%20CONSTRUCTION%20PROJECT" target="_blank" class="bg-orange-600 text-white font-bold py-3 px-8 rounded-xl hover:bg-orange-700 transition-colors">
            Urgent WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
