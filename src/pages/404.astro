  <Footer />
</Layout>

<script>
  function performSearch() {
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    const query = searchInput.value.trim().toLowerCase();
    
    if (!query) return;
    
    // Define search mappings
    const searchMappings = {
      'ac': '/services#ac-services',
      'air conditioning': '/services#ac-services',
      'cooling': '/services#ac-services',
      'plumbing': '/services#plumbing-services',
      'plumber': '/services#plumbing-services',
      'water': '/services#plumbing-services',
      'leak': '/services#plumbing-services',
      'electrical': '/services#electrical-services',
      'electricity': '/services#electrical-services',
      'power': '/services#electrical-services',
      'painting': '/services#painting-services',
      'paint': '/services#painting-services',
      'maintenance': '/services',
      'amc': '/packages',
      'annual maintenance': '/packages',
      'contract': '/packages',
      'emergency': '/contact',
      'urgent': '/contact',
      'new resident': '/book?package=new-resident',
      'move in': '/book?package=new-resident',
      'booking': '/book',
      'book': '/book',
      'contact': '/contact',
      'about': '/about',
      'team': '/about',
      'price': '/packages',
      'cost': '/packages',
      'quote': '/contact'
    };
    
    // Find matching page
    let targetUrl = '/';
    for (const [keyword, url] of Object.entries(searchMappings)) {
      if (query.includes(keyword)) {
        targetUrl = url;
        break;
      }
    }
    
    // Redirect to target page
    window.location.href = targetUrl;
  }
  
  // Allow Enter key to trigger search
  document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      performSearch();
    }
  });
</script>
