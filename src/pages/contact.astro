---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/astro/Navigation.astro';
import Footer from '../components/astro/Footer.astro';
---

<Layout title="Project Consultation & Site Visits Dubai | Construction Finishing Quotes - ServDubai" description="Schedule free site visits and project consultations with ServDubai's construction finishing specialists in Dubai. Get expert advice, detailed quotes, and professional assessments for kitchen, bathroom, flooring, and building finishing projects. Same-day site visits available.">
  <Navigation />
  
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-primary-50 to-secondary-50 py-16">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-text-600 mb-4">
          Project <span class="gradient-text">Consultation</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Ready to start your construction finishing project? Our specialists are here to help developers, contractors, and building owners complete their projects with precision and quality. 
          Schedule a free site visit and get expert project consultation today.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="section-padding bg-white">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        
        <!-- Contact Cards -->
        <div class="lg:col-span-1 space-y-6">
          
          <!-- Phone -->
          <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-xl p-6 card-shadow">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text-600">Call Us</h3>
                <p class="text-gray-600">+971 50 123 4567</p>
                <p class="text-sm text-gray-500">Project Consultation Line</p>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="bg-gradient-to-br from-secondary-50 to-accent-50 rounded-xl p-6 card-shadow">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-secondary-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text-600">Email Us</h3>
                <p class="text-gray-600">projects@servdubai.ae</p>
                <p class="text-sm text-gray-500">Project inquiries within 24 hours</p>
              </div>
            </div>
          </div>

          <!-- Office -->
          <div class="bg-gradient-to-br from-accent-50 to-primary-50 rounded-xl p-6 card-shadow">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-accent-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text-600">Visit Us</h3>
                <p class="text-gray-600">Dubai Marina, Dubai, UAE</p>
                <p class="text-sm text-gray-500">Project Office: Sun-Thu 8AM-6PM</p>
              </div>
            </div>
          </div>

          <!-- WhatsApp -->
          <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 card-shadow">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text-600">WhatsApp</h3>
                <p class="text-gray-600">+971 50 123 4567</p>
                <p class="text-sm text-gray-500">Quick project quotes</p>
              </div>
            </div>
          </div>

        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl p-8 card-shadow border border-gray-100">
            <h2 class="text-2xl font-bold text-text-600 mb-6">Request Project Consultation</h2>
            
            <form class="space-y-6" id="contact-form">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                    First Name *
                  </label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                    placeholder="Enter your first name"
                  />
                </div>

                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                    Last Name *
                  </label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                    placeholder="Enter your last name"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                    placeholder="your.email@example.com"
                  />
                </div>

                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                    Phone Number *
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                    placeholder="+971 50 123 4567"
                  />
                </div>
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                  Subject *
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                >
                  <option value="">Select project type</option>
                  <option value="kitchen">Kitchen Finishing Project</option>
                  <option value="bathroom">Bathroom Finishing Project</option>
                  <option value="flooring">Flooring & Tiling Project</option>
                  <option value="woodwork">Woodwork & Carpentry Project</option>
                  <option value="painting">Painting & Finishing Project</option>
                  <option value="ac">AC Installation Project</option>
                  <option value="complete">Complete Building Finishing</option>
                  <option value="consultation">General Project Consultation</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  placeholder="Please describe your construction finishing project requirements, timeline, and any specific details..."
                ></textarea>
              </div>

              <div>
                <button
                  type="submit"
                  class="w-full bg-primary-600 text-white font-semibold py-4 px-8 rounded-lg hover:bg-primary-700 transition-colors focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
                >
                  Get Project Quote
                </button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="bg-gray-50 section-padding">
    <div class="max-w-4xl mx-auto container-padding">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-text-600 mb-4">
          Construction Project FAQs
        </h2>
        <p class="text-xl text-gray-600">
          Quick answers to common questions about our construction finishing services and project processes.
        </p>
      </div>

      <div class="space-y-6">
        
        <div class="bg-white rounded-lg p-6 card-shadow">
          <h3 class="text-lg font-semibold text-text-600 mb-2">
            How quickly can you start construction finishing projects?
          </h3>
          <p class="text-gray-600">
            We typically schedule site visits within 24-48 hours of your inquiry. For construction projects, 
            we can usually begin work within 3-5 business days after project approval, depending on scope 
            and material availability. Urgent projects can be prioritized with same-day site visits.
          </p>
        </div>

        <div class="bg-white rounded-lg p-6 card-shadow">
          <h3 class="text-lg font-semibold text-text-600 mb-2">
            Do you provide free project assessments and quotes?
          </h3>
          <p class="text-gray-600">
            Yes, we provide free site visits and detailed project assessments for all construction 
            finishing projects. Our specialists will evaluate your requirements and provide transparent 
            pricing with no hidden fees. We also offer bulk pricing for multiple units or large projects.
          </p>
        </div>

        <div class="bg-white rounded-lg p-6 card-shadow">
          <h3 class="text-lg font-semibold text-text-600 mb-2">
            Which areas of Dubai do you serve for construction projects?
          </h3>
          <p class="text-gray-600">
            We provide construction finishing services across all major areas of Dubai including Dubai Marina, 
            Downtown Dubai, Jumeirah, Business Bay, DIFC, Dubai Hills, City Walk, Al Barsha, Dubai South, 
            and Dubai Investment Park. We specialize in new building projects and work with developers 
            throughout Dubai.
          </p>
        </div>

        <div class="bg-white rounded-lg p-6 card-shadow">
          <h3 class="text-lg font-semibold text-text-600 mb-2">
            Are your construction specialists licensed and insured?
          </h3>
          <p class="text-gray-600">
            Absolutely. All our construction finishing specialists are fully licensed by Dubai Municipality 
            and we maintain comprehensive insurance coverage for all projects. We conduct regular background 
            checks and provide ongoing training to ensure the highest standards of construction finishing work.
          </p>
        </div>

        <div class="bg-white rounded-lg p-6 card-shadow">
          <h3 class="text-lg font-semibold text-text-600 mb-2">
            Can you work on construction projects during weekends?
          </h3>
          <p class="text-gray-600">
            Yes, we offer flexible scheduling including weekends to accommodate construction project 
            timelines and building handover deadlines. We understand that construction projects often 
            require flexible timing, and we work with developers and contractors to meet critical deadlines.
          </p>
        </div>

      </div>
    </div>
  </section>

  <!-- Office Hours & Map -->
  <section class="section-padding bg-white">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Office Hours -->
        <div>
          <h2 class="text-2xl font-bold text-text-600 mb-6">Office Hours & Location</h2>
          
          <div class="space-y-4 mb-8">
            <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="font-medium text-gray-700">Monday - Thursday</span>
              <span class="text-gray-600">8:00 AM - 6:00 PM</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="font-medium text-gray-700">Friday</span>
              <span class="text-gray-600">8:00 AM - 12:00 PM</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="font-medium text-gray-700">Saturday</span>
              <span class="text-gray-600">9:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="font-medium text-gray-700">Sunday</span>
              <span class="text-gray-600">Closed</span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="font-medium text-primary-600">Emergency Services</span>
              <span class="text-primary-600 font-semibold">24/7 Available</span>
            </div>
          </div>

          <div class="bg-primary-50 rounded-lg p-6">
            <h3 class="font-semibold text-text-600 mb-2">Urgent Project Contact</h3>
            <p class="text-gray-600 mb-2">
              For urgent construction finishing projects and same-day site visits:
            </p>
            <p class="text-2xl font-bold text-primary-600">+971 50 123 4567</p>
          </div>
        </div>

        <!-- Map Placeholder -->
        <div>
          <h2 class="text-2xl font-bold text-text-600 mb-6">Find Us</h2>
          <div class="bg-gray-200 rounded-lg h-96 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
              </svg>
              <p class="text-gray-600 font-medium">Dubai Marina</p>
              <p class="text-gray-500">Dubai, UAE</p>
              <p class="text-sm text-gray-500 mt-2">Interactive map coming soon</p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Contact form handling
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        
        // Simulate form submission
        const submitButton = form.querySelector('button[type="submit"]');
        const originalText = submitButton.textContent;
        
        submitButton.textContent = 'Sending...';
        submitButton.disabled = true;
        
        setTimeout(() => {
          // Show success message
          form.innerHTML = `
            <div class="text-center py-12">
              <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-4">Message Sent Successfully!</h3>
              <p class="text-gray-600 mb-6">
                Thank you for contacting ServDubai. We'll get back to you within 24 hours.
              </p>
              <button onclick="location.reload()" class="bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-primary-700 transition-colors">
                Send Another Message
              </button>
            </div>
          `;
          
          console.log('Contact form submitted:', data);
        }, 2000);
      });
    }
  });
</script>
