---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/astro/Navigation.astro';
import Footer from '../components/astro/Footer.astro';
---

<Layout title="Offline - ServDubai" description="You're currently offline. Some features may not be available." noindex={true}>
  <Navigation />
  
  <!-- Offline Content -->
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-blue-50 py-20">
    <div class="max-w-2xl mx-auto container-padding text-center">
      
      <!-- Offline Icon -->
      <div class="mb-8">
        <div class="w-24 h-24 mx-auto bg-gray-100 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-12.728 12.728m0-12.728l12.728 12.728M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2z"/>
          </svg>
        </div>
      </div>

      <!-- Offline Message -->
      <div class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          You're Offline
        </h1>
        <p class="text-lg text-gray-600 mb-6">
          It looks like you're not connected to the internet. Some features may not be available, but you can still:
        </p>
      </div>

      <!-- Available Actions -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        
        <!-- Emergency Contact -->
        <div class="bg-white rounded-xl p-6 card-shadow">
          <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Emergency Call</h3>
          <p class="text-gray-600 text-sm mb-4">For urgent building service needs</p>
          <a href="tel:+971501234567" class="block bg-red-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-red-700 transition-colors">
            Call +971 50 123 4567
          </a>
        </div>

        <!-- Service Information -->
        <div class="bg-white rounded-xl p-6 card-shadow">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">View Services</h3>
          <p class="text-gray-600 text-sm mb-4">Cached information about our services</p>
          <button onclick="goToServices()" class="block w-full bg-blue-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-blue-700 transition-colors">
            Browse Services
          </button>
        </div>

      </div>

      <!-- Offline Features -->
      <div class="bg-white rounded-xl p-6 card-shadow mb-8">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">What You Can Do Offline</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm text-gray-700">Browse cached service information</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm text-gray-700">View contact information</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm text-gray-700">Make emergency phone calls</span>
            </div>
          </div>
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm text-gray-700">Read service packages details</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm text-gray-700">Access company information</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
              <span class="text-sm text-gray-700">Booking forms require internet</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Connection Status -->
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
        <div class="flex items-center justify-center space-x-2 mb-4">
          <div id="connectionStatus" class="w-3 h-3 bg-red-500 rounded-full"></div>
          <span id="connectionText" class="text-sm font-medium text-yellow-800">Checking connection...</span>
        </div>
        <button 
          onclick="checkConnection()" 
          id="retryButton"
          class="bg-yellow-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-yellow-700 transition-colors"
        >
          Check Connection
        </button>
      </div>

      <!-- Quick Actions -->
      <div class="space-y-4">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <button onclick="goToHome()" class="bg-primary-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors">
            Go Home
          </button>
          <button onclick="goToServices()" class="bg-white text-primary-600 border border-primary-600 px-4 py-2 rounded-lg font-medium hover:bg-primary-50 transition-colors">
            View Services
          </button>
          <button onclick="goToContact()" class="bg-white text-primary-600 border border-primary-600 px-4 py-2 rounded-lg font-medium hover:bg-primary-50 transition-colors">
            Contact Info
          </button>
        </div>
      </div>

    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Check online status
  function updateConnectionStatus() {
    const statusDot = document.getElementById('connectionStatus');
    const statusText = document.getElementById('connectionText');
    const retryButton = document.getElementById('retryButton');
    
    if (!statusDot || !statusText || !retryButton) return;
    
    if (navigator.onLine) {
      statusDot.className = 'w-3 h-3 bg-green-500 rounded-full';
      statusText.textContent = 'Connected! You can now use all features.';
      retryButton.textContent = 'Reload Page';
      retryButton.onclick = () => window.location.reload();
    } else {
      statusDot.className = 'w-3 h-3 bg-red-500 rounded-full';
      statusText.textContent = 'Still offline. Some features are limited.';
      retryButton.textContent = 'Check Connection';
    }
  }
  
  function checkConnection() {
    updateConnectionStatus();
    
    // Additional check with a simple fetch
    fetch('/', { method: 'HEAD', cache: 'no-cache' })
      .then(() => {
        if (navigator.onLine) {
          setTimeout(() => window.location.reload(), 1000);
        }
      })
      .catch(() => {
        // Still offline
        updateConnectionStatus();
      });
  }
  
  function goToHome() {
    window.location.href = '/';
  }
  
  function goToServices() {
    window.location.href = '/services';
  }
  
  function goToContact() {
    window.location.href = '/contact';
  }
  
  // Listen for online/offline events
  window.addEventListener('online', updateConnectionStatus);
  window.addEventListener('offline', updateConnectionStatus);
  
  // Initial status check
  document.addEventListener('DOMContentLoaded', updateConnectionStatus);
  
  // Periodic connection check
  setInterval(checkConnection, 30000); // Check every 30 seconds
</script>
